@model List<WebMvc.Models.User>
<link rel="stylesheet" href="style.css"/>
<a asp-controller="Home" asp-action="Index">Home</a>
<a asp-controller="Users" asp-action="Add">Add User</a>

<p>Count: @Model.Count</p>

<table>
    <thead>
    <th>Id</th>
    <th>Name</th>
    <th>Phone</th>
    <th>Actions</th>
    </thead>
    @{
        for (int i = 0; i < Model.Count; i++)
        {
            var index = i + 1;
                <tr>
                    <td>@index</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Phone</td>
                    <td><a asp-controller="Users" asp-action="Delete" asp-route-i=@i>Delete</a></td>
                    <td><a asp-controller="Users" asp-action="Edit" asp-route-index=@i>Edit</a></td>
                </tr>
        }
    }
</table>
