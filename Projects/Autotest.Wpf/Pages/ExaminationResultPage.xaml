<Page x:Class="Autotest.Wpf.Pages.ExaminationResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autotest.Wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExaminationResultPage">

    <Grid>
        <Label FontSize="30" HorizontalAlignment="Center" Content="Result"></Label>
        <StackPanel Margin="40">
            <Label FontSize="20">Correct Answers</Label>
            <TextBlock Name="CorrectAnswerdCount"  FontSize="20" Text="0"></TextBlock>
            <Label FontSize="20">Questions count</Label>
            <TextBlock Name="QuestionsCount" FontSize="20" Text="0"></TextBlock>
            <Button Click="MenuButtonClick" Width="300" Height="30" Content="Menu"></Button>
        </StackPanel>
    </Grid>
</Page>
