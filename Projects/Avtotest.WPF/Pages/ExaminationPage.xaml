<Page x:Class="Avtotest.WPF.Pages.ExaminationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Avtotest.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExaminationPage"
      Background="AliceBlue">

    <Grid>
        <StackPanel Name="question">
            <StackPanel Orientation="Vertical">
                <Button Name="nextBtn" Height="30" Click="ButtonBase_OnClick" Content="Next"></Button>
            </StackPanel>
            <Image VerticalAlignment="Top" Name="questionImage" Height="300" Margin="10,10,10,10" Width="380"/>
            <TextBox Name="questionText" HorizontalAlignment="Left" Margin="10,0,10,10" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontSize="16"/>
            <StackPanel  Name="panel">
                <Button Content="Variant 1" Margin="10,0,10,10" FontSize="16" Height="40" FontWeight="SemiBold" Click="Button_Click" Background="#FFCC9B9B"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
