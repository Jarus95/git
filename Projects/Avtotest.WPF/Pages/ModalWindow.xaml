<Window x:Class="Avtotest.WPF.Pages.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avtotest.WPF.Pages"
        mc:Ignorable="d"
        Title="ModalWindow" Height="140" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="20" Margin="10" Grid.Row="0" Grid.Column="0" Content="Are you sure to restart?"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Click="OkBtnClick" Grid.Column="0" Height="40" Width="140" Content="Ok"></Button>
            <Button Click="CloseBtnClick" Grid.Column="1" Height="40" Width="140" Content="Cancel"></Button>
        </Grid>
    </Grid>
</Window>
